<?xml version="1.0" encoding="utf-8"?><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent">-->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="107dp"
    android:layout_centerInParent="true"
    android:elevation="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="120dp"
        android:layout_height="107dp"
        android:background="@drawable/overflowbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="删除场景"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1">

        </View>

        <TextView
            android:id="@+id/addChannel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="添加设备"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1">

        </View>

        <TextView
            android:id="@+id/setTime"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="定时设置"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>
    </LinearLayout>
</android.support.v7.widget.CardView><!--</RelativeLayout>-->
