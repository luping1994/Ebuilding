<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwitchButtonStyleMD" >
        <!--<item name="android:paddingLeft">10dp</item>-->
        <!--<item name="android:paddingRight">10dp</item>-->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

        <item name="kswThumbDrawable">@drawable/ksw_md_thumb</item>
        <item name="kswBackColor">@color/ksw_md_back_color</item>
        <item name="kswBackMeasureRatio">2</item>
        <item name="kswThumbMarginLeft">0dp</item>
        <item name="kswThumbMarginTop">-1dp</item>
        <item name="kswThumbMarginRight">0dp</item>
        <item name="kswThumbMarginBottom">-1dp</item>
        <item name="kswThumbWidth">25dp</item>
        <item name="kswThumbHeight">25dp</item>
    </style>

    <style name="line_below_navigation_bar">
        <item name="android:background">#ff000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2.0dip</item>
        <item name="android:alpha">0.1</item>
    </style>


    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:textSize">16sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textSize">18sp</item>-->
        <!--<item name="android:textStyle">normal</item>-->
    </style>
    <!--自定义checkbox样式-->
    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>


</resources>
